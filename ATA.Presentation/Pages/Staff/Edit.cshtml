@page "{id:long}"
@model ATA.Presentation.Pages.Staff.EditModel

@{
    ViewData["MenuStaff"] = "current";
    ViewData["Title"] = "ویرایش اطلاعات پرسنل";

    string tempDate = Model.Staff.RegisterDate.ToString("yyyy/MM/dd");
}

<script type="text/javascript">
    $(function () {
        $("#RegisterDate, #span1").persianDatepicker();
    });
</script>

<div class="portlet box border shadow">

    <div class="portlet-body">
        <form role="form" method="post">
            <div class="form-body">
                <div class="row">
                    <input type="hidden" asp-for="Staff.Id" />
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>نام و نام خانوادگی</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-user"></i>
                                </span>

                                <input type="text" required asp-for="Staff.Name" class="form-control" placeholder="نام و نام خانوادگی">

                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>تاریخ استخدام</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-calendar-times-o"></i>

                                </span>

                                <input type="text" required id="RegisterDate" asp-for="Staff.RegisterDate" value="@tempDate" class="form-control">

                                <span id="span1"></span>
                                @* <input type="text" name="RegisterDate" id="RegisterDate" class="has-persian-datepicker form-control">*@
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-info btn-round">
                        <i class="icon-check"></i>
                        ویرایش اطلاعات
                    </button>
                    <a class="btn btn-warning btn-round" asp-page="./Index">
                        بازگشت به لیست پرسنل
                        <i class="icon-close"></i>
                    </a>
                </div>

            </div>
        </form>
    </div><!-- /.portlet-body -->
</div><!-- /.portlet -->

@section persianDatepicker
{

    <link rel="stylesheet" href="~/DatePicker/css/persianDatepicker-default.css" />
    <script src="~/DatePicker/js/jquery-1.10.1.min.js"></script>
    <script src="~/DatePicker/js/persianDatepicker.min.js"></script>
}
